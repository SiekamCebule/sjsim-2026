{
  "name": "sjsim-2026",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "copy-ui-dist": "tsx scripts/copy-ui-dist.ts",
    "clean": "npm run clean --workspaces --if-present",
    "dev": "npm run dev --workspace @sjsim/app",
    "apply-fake-names": "tsx scripts/apply-fake-names.ts",
    "apply-fake-names:release": "NODE_ENV=production tsx scripts/apply-fake-names.ts --release",
    "release:prepare": "pnpm -C packages/ui run build && pnpm -C packages/app run build && pnpm run copy-ui-dist && pnpm run apply-fake-names:release -- --dist packages/app/ui/dist",
    "release:win": "pnpm run release:prepare && pnpm --filter @sjsim/app run package:win",
    "release:linux": "pnpm run release:prepare && pnpm --filter @sjsim/app run package:linux",
    "release:mac": "pnpm run release:prepare && pnpm --filter @sjsim/app run package:mac",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier \"packages/**/*.{ts,tsx,js,jsx,json,md,css}\" --check",
    "format:write": "prettier \"packages/**/*.{ts,tsx,js,jsx,json,md,css}\" --write",
    "sapporo": "tsx scripts/simulate-sapporo.ts",
    "test-form-change": "tsx scripts/test-form-change.ts"
  },
  "engines": {
    "node": ">=20 <21"
  },
  "devDependencies": {
    "tsx": "^4.19.2",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  }
}