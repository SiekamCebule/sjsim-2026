{
  "name": "@sjsim/app",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently -k \"pnpm -C ../ui dev\" \"pnpm run dev:tsc\" \"pnpm run dev:electron\"",
    "dev:ui": "pnpm -C ../ui dev",
    "dev:tsc": "tsc -p tsconfig.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 dist/main.js && env -u ELECTRON_RUN_AS_NODE VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "tsc -p tsconfig.json",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:linux": "electron-builder --linux",
    "package:mac": "electron-builder --mac",
    "clean": "tsc -p tsconfig.json --build --clean",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "electron": "^28.2.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.11.30",
    "electron-rebuild": "^3.2.9",
    "electron-builder": "^24.13.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.sjsim.predazzo2026",
    "productName": "Sj.Sim Predazzo Edition",
    "artifactName": "Sj.Sim Predazzo Edition-${version}-${os}-${arch}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "ui/dist/**",
      "package.json"
    ],
    "asar": true,
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    }
  }
}